<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/alumni_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alumni_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin = "2dp"
                android:padding="4dp"
                android:background="@drawable/placeholder"/>

            <TextView
                android:id="@+id/alumni_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alumni_name"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/alumni_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alumni_designation"
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/alumni_linear_layout"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:text="@string/alumni_quote"
            android:textStyle="italic"/>






    </RelativeLayout>







</LinearLayout>