<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".fragments.AddResult">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/pt_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimary"
            app:title="TechUtsav"
            app:titleTextColor="#ffffff" />
        app:titleTextAppearance="?attr/textAppearanceHeadline6" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/prelimsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Prelims Result:"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:id="@+id/prelimsmem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Team Members"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/textViewAdd"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/poppins_light"
                                android:text="Add Member" />

                            <Button
                                android:id="@+id/textViewRemove"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/poppins_light"
                                android:text="Remove Member" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/memeber1title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Memeber1"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/memeber1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#ffffff" />

                        <LinearLayout
                            android:id="@+id/memeber2title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 2"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/memeber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/memeber3title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 3"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/memeber3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/memeber4title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 4"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/memeber4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="College:"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/college"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/AddResult"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_light"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"
                                android:text="Add Member" />

                            <Button
                                android:id="@+id/closeCard"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/poppins_light"
                                android:text="FINISH" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Event Result:"
                        android:textColor="#ffffff"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:id="@+id/finalsmem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Team Members"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/finaltextViewAdd"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_light"
                                android:text="Add Member"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"/>

                            <Button
                                android:id="@+id/finaltextViewRemove"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_light"
                                android:text="Remove Member"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"/>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/finalmemeber1title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Memeber1"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/finalmemeber1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#ffffff" />

                        <LinearLayout
                            android:id="@+id/finalmemeber2title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 2"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/finalmemeber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/finalmemeber3title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 3"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/finalmemeber3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/finalmemeber4title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:text="Memeber 4"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/finalmemeber4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/poppins_light"
                                android:textColor="#ffffff" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="College:"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/finalcollege"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Position:"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/finalposition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="#ffffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/finalAddResult"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_light"
                                android:text="Add Member"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"/>

                            <Button
                                android:id="@+id/finalcloseCard"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/poppins_light"
                                android:text="FINISH"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorPrimary"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>